{
    "compilerOptions": {
        "target": "es2018",
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "declaration": false,
        "sourceMap": false,
        "strict": true,
        "experimentalDecorators": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}